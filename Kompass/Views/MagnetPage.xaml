<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kompass.Views.MagnetPage"
             Title="Kompass">
    <VerticalStackLayout Spacing="15"
                         Margin="20">
        <Label Text="Magnetischer Kompass"
               FontSize="Large"/>

        <Image
            x:Name="CompassImage"
            Source="compass.png"
            Rotation="{Binding CompassRotation, Mode=TwoWay}"
            Style="{StaticResource KompassImage}" />

        <HorizontalStackLayout Style="{StaticResource Lichter}">
            <Label Text="Lichter" 
                   VerticalTextAlignment="Center"/>
            <Switch IsToggled="{Binding IsLight}"/>
        </HorizontalStackLayout>
        <Button x:Name="CompassButton"
                Style="{StaticResource Button}"
            Command="{Binding GetCompass}"
                Text="{Binding ButtonText, Mode=TwoWay}" IsEnabled="True"/>
    </VerticalStackLayout>
</ContentPage>